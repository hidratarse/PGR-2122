		Character mapaOrdenador[][]=new Character [TAMANNIO][TAMANNIO];
		Character mapaOrdenadorParaUsuario[][]=new Character [TAMANNIO][TAMANNIO];
		
	}
	
Scanner sc = new Scanner(System.in);
Character agua='A';
Character AGUA_NO_TOCADO='.';
Character TOCADO='X';
static int TAMANNIO=10;

public static void inicializacionMapa(Character mapa[][]) {
	for(int i=0;i<mapa.length; i++) {
		for(int e=0; e<mapa[i].length; e++) {
			
			mapa[i][e]=AGUA_NO_TOCADO;
		}
	}
	
}
}
